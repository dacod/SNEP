<form>
    
    <period>
        <elements>
            
           <init_day>
                <type>text</type>
                <options>
                    <label>Period from:</label>
                    <required>true</required>
                    <description>dd/mm/YYYY hh:mm</description>
                </options>
            </init_day>
            
            
            <till_day>
                <type>text</type>
                <options>
                   <required>true</required>
                    <label>To:</label>                    
                    <description>dd/mm/YYYY hh:mm</description>
                </options>
            </till_day>
            
            
        </elements>    
    </period>  
    
    <exten>
        <elements>
            
            <group_select>
                <type>select</type>
                <options>
                    <label>Group</label>
                </options>
            </group_select>
            
            <exten_select>
                <type>text</type>
                <options>
                    <label>Extensions</label>
                    <description>
                   Separate with ;
                    </description>
                    <validators>
                        <regex>
                            <validator>regex</validator>
                            <options>
                                <pattern>/(\d{4}[;]?)$/i</pattern>
                                <messages>
                                    <regexNotMatch>The extension list must follow the format from this example. EX: 8000;8001</regexNotMatch>
                                </messages>
                            </options>
                        </regex>
                        <strlen>
                            <validator>StringLength</validator>
                            <options>
                                <min>1</min>
                                <max>200</max>
                            </options>
                        </strlen>
                    </validators>
                </options>
            </exten_select>
            
        </elements>    
    </exten>  
    
    <service>
        <elements>
            
            <serv_select>
                <type>MultiCheckbox</type>
                <separator>' '</separator>
                <options>
                    <label>Choose the services</label>
                    <multioptions>
                        <SIGAME>SIGAME</SIGAME>
                        <DND>DND</DND>
                    </multioptions>
                </options>
            </serv_select>
            
            <stat_select>
                <type>MultiCheckbox</type>
                <separator>' '</separator>
                <options>
                    <label>Service State</label>                    
                    <multioptions>
                        <A>Activated/Deactivated</A>
                        <D>Disabled</D>
                    </multioptions>
                </options>
            </stat_select>
            
            <out_type>
                <type>radio</type>
                <options>
                    <label>Report Type</label>
                    <value>lst</value>
                    <separator> </separator>
                    <multioptions>
                        <lst>Analytic</lst>
                        <csv>CSV</csv>
                    </multioptions>
                </options>
            </out_type>
            
        </elements>    
    </service>  
    
</form>
