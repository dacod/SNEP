    Created on : 4 de Abril de 2011, 13:35
    Author     : Rafael Bozzetti
    Description:
        Snep Form specification for trunks controller
-->

<form>
    <trunks>
        <elements>
            <callerid>
                <type>Text</type>
                <options>
                    <required>true</required>
                    <label>Name</label>
                </options>
            </callerid>
        </elements>
    </trunks>
    <technology>
        <elements>
            <type>
                <type>Select</type>
                <options>
                    <label>Trunk type</label>
                    <multioptions>
                        <sip>SIP</sip>
                        <iax2>IAX2</iax2>
                        <khomp>Khomp</khomp>
                        <virtual>TDM/Virtual</virtual>
                        <snepsip>Snep SIP</snepsip>
                        <snepiax2>Snep IAX2</snepiax2>
                    </multioptions>
                </options>
            </type>
        </elements>
    </technology>
    <ip>
        <elements>
            <dialmethod>
                <type>radio</type>
                <options>
                    <label>Dial Method</label>
                    <value>normal</value>
                    <separator> </separator>
                    <multioptions>
                        <normal>Normal</normal>
                        <noauth>Without Authentication</noauth>
                    </multioptions>
                </options>
            </dialmethod>
            <username>
                <type>Text</type>
                <options>
                    <label>Username</label>
                </options>
            </username>
            <secret>
                <type>password</type>
                <options>
                    <label>Password</label>
                </options>
            </secret>
            <host>
                <type>Text</type>
                <options>
                    <label>Remote Host</label>
                </options>
            </host>
            <fromuser>
                <type>text</type>
                <options>
                    <label>From user</label>
                </options>
            </fromuser>
            <fromdomain>
                <type>text</type>
                <options>
                    <label>From domain</label>
                </options>
            </fromdomain>
            <dtmfmode>
                <type>radio</type>
                <options>
                    <label>DTMF Mode</label>
                    <value>rfc2833</value>
                    <separator> </separator>
                    <multioptions>
                        <rfc2833>RFC-2833</rfc2833>
                        <inband>Inband</inband>
                        <info>Info</info>
                    </multioptions>
                </options>
            </dtmfmode>
            <qualify>
                <type>radio</type>
                <options>
                    <label>Delay Qualification</label>
                    <value>yes</value>
                    <separator> </separator>
                    <multioptions>
                        <yes>Sim</yes>
                        <no>NÃ£o</no>
                        <specify>Especificar</specify>
                    </multioptions>
                </options>                
            </qualify>
            <qualify_value>
                <type>text</type>
                <options>
                    <label>Qualification time</label>
                </options>
            </qualify_value>
            <peer_type>
                <type>radio</type>
                <options>
                    <label>Peer Type</label>
                    <value>peer</value>
                    <separator> </separator>
                    <multioptions>
                        <peer>Peer</peer>
                        <friend>Friend</friend>
                    </multioptions>
                </options>
            </peer_type>
            <reverse_auth>
                <type>checkbox</type>
                <options>
                    <value>1</value>
                    <label>Force reverse authentication</label>
                    <description>Enable</description>
                </options>
            </reverse_auth>
            <nat>
                <type>checkbox</type>
                <options>
                    <label>NAT Optimization</label>
                    <description>Enable</description>
                </options>
            </nat>  
            
            <codec>
                <type>codec</type>
                <options>
                    <value>ulaw</value>
                    <label>Codec 1</label>
                    <description>Prioritary</description>
                </options>
            </codec>
            <codec1>
                <type>codec</type>
                <options>
                    <value>alaw</value>
                    <label>Codec 2</label>
                </options>
            </codec1>
            <codec2>
                <type>codec</type>
                <options>
                    <value>ilbc</value>
                    <label>Codec 3</label>
                </options>
            </codec2>

            <domain>
                <type>text</type>
                <options>
                    <label>Domain</label>
                </options>
            </domain>
            <insecure>
                <type>text</type>
                <options>
                    <label>Insecure</label>
                </options>
            </insecure>
            <port>
                <type>text</type>
                <options>
                    <label>Port</label>
                </options>
            </port>
            <calllimit>
                <type>text</type>
                <options>
                    <label>Channel Limit</label>
                </options>
            </calllimit>
        </elements>
    </ip>
    <iax2>
        <elements>
            <istrunk>
                <type>select</type>
                <options>
                    <label>IAX2 Trunking</label>
                    <multioptions>
                        <yes>Yes</yes>
                        <no>No</no>
                    </multioptions>
                </options>
            </istrunk>
        </elements>
    </iax2>
    <virtual>
        <elements>
            <channel>
                <type>Text</type>
                <options>
                    <label>Channel Technology</label>
                </options>
            </channel>
            <id_regex>
                <type>Text</type>
                <options>
                    <label>ID Regular Expression</label>
                </options>
            </id_regex>
        </elements>
    </virtual>
    <khomp>
        <elements>
            <board>
                <type>Select</type>
                <options>
                    <label>Board</label>
                </options>
            </board>
        </elements>
    </khomp>
    <snepsip>
        <elements>
            <host>
                <type>text</type>
                <options>
                    <label>Remote Host</label>
                </options>
            </host>
            <dtmfmode>
                <type>radio</type>
                <options>
                    <label>DTMF Mode</label>
                    <value>rfc2833</value>
                    <multioptions>
                        <rfc2833>RFC-2833</rfc2833>
                        <inband>Inband</inband>
                        <info>Info</info>
                    </multioptions>
                </options>
            </dtmfmode>
        </elements>
    </snepsip>
    <snepiax2>
        <elements>
            <username>
                <type>text</type>
                <options>
                    <label>Identifier</label>
                    <description>Same on both servers</description>
                </options>
            </username>
            <nat>
                <type>checkbox</type>
                <options>
                    <label>NAT optimization</label>
                    <description>Enabled</description>
                </options>
            </nat>
        </elements>
    </snepiax2>
   <advanced>
        <elements>
            <map_extensions>
                <type>Checkbox</type>
                <options>
                    <label>Extension Mapping</label>
                    <description>Enable</description>
                </options>
            </map_extensions>
            <dtmf_dial>
                <type>Checkbox</type>
                <options>
                    <label>DTML dial mode</label>
                    <description>Enable</description>
                </options>
            </dtmf_dial>
            <dtmf_dial_number>
                <type>Text</type>
                <options>
                    <label>DTML dial mode number</label>
                </options>
            </dtmf_dial_number>
            <tempo>
                <type>Checkbox</type>
                <options>
                    <label>Minute Control</label>
                    <description>Enable</description>
                    <value>no</value>
                    <separator> </separator>                    
                </options>
            </tempo>
            <time_total>
                <type>Text</type>
                <options>
                    <label>Minutes</label>
                </options>
            </time_total>
            <time_chargeby>
                <type>radio</type>
                <options>
                    <label>Type of control</label>
                    <separator> </separator>
                    <multioptions>
                        <Y>Year</Y>
                        <M>Month</M>
                        <D>Day</D>
                    </multioptions>
                </options>
            </time_chargeby>
        </elements>
    </advanced>
</form>
